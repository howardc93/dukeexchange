mixin text-form-group(fieldname, label, val)
  .form-group
    label(for=fieldname)= label
    input.form-control(type="text" name=fieldname placeholder=label value=val)

mixin dropdown-form-group(fieldname, label, options)
  .form-group
    label(for=fieldname)= label
    select.form-control(name=fieldname)
      option
      - each option in options
        option(value=option)= option
